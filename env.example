# ============================================
# NETWORK CONFIGURATION
# ============================================

# Режим сети: testnet или mainnet
# Если PUMP_FUN_TESTNET=true или REAL_TRADING_ENABLED=false, используется testnet
PUMP_FUN_TESTNET=false

# ============================================
# MAINNET CONFIGURATION (используется если PUMP_FUN_TESTNET=false)
# ============================================

# Primary RPC WebSocket URL (e.g. Helius, QuickNode, etc.)
PRIMARY_RPC_WS_URL=wss://atlas-mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
# Legacy: HELIUS_WS_URL=wss://...

# Primary RPC HTTP URL
PRIMARY_RPC_HTTP_URL=https://atlas-mainnet.helius-rpc.com/?api-key=YOUR_API_KEY
# Legacy: HELIUS_HTTP_URL=https://...

# WebSocket for PumpPortal (Free data stream)
PUMP_PORTAL_WS_URL=wss://pumpportal.fun/api/data

# Secondary RPC URLs (Fallback)
SECONDARY_RPC_URLS=https://api.mainnet-beta.solana.com,https://solana-api.projectserum.com

# ============================================
# TESTNET CONFIGURATION (используется если PUMP_FUN_TESTNET=true)
# ============================================

# Pump.fun Testnet Program ID (будет установлен после получения документации)
PUMP_FUN_TESTNET_PROGRAM_ID=

# Pump.fun Testnet WebSocket URL
PUMP_FUN_TESTNET_WS_URL=

# Pump.fun Testnet HTTP RPC URL
PUMP_FUN_TESTNET_HTTP_URL=

# QuickNode альтернатива (если нужна)
# QUICKNODE_WS_URL=wss://your-endpoint.solana-mainnet.quiknode.pro/YOUR_KEY/
# QUICKNODE_HTTP_URL=https://your-endpoint.solana-mainnet.quiknode.pro/YOUR_KEY/

# Redis (опционально, для кеша)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Логирование
LOG_LEVEL=info
LOG_DIR=./logs

# Торговые параметры (можно переопределить)
INITIAL_DEPOSIT=0.03
SOL_USD_RATE=170
MAX_OPEN_POSITIONS=15
MAX_DRAWDOWN_PCT=25

# Управление балансом
MAX_TRADING_BALANCE=0.3
MIN_POSITION_SIZE=0.004
MAX_POSITION_SIZE=0.004
PERSONAL_WALLET_ADDRESS=BDZXXjEoqT1rxxoRK46oo7N7hoiTiY65jPHXjKGP8178

# ============================================
# TRADING MODE CONFIGURATION
# ============================================

# Режим торговли: 'paper' (симуляция) или 'real' (реальная торговля)
# По умолчанию: 'paper'
TRADING_MODE=paper

# Legacy: для обратной совместимости (не используется в логике выбора режима)
REAL_TRADING_ENABLED=false

# Solana Wallet (обязательно для реальной торговли)
# WALLET_MNEMONIC="word1 word2 word3 ... word12"


